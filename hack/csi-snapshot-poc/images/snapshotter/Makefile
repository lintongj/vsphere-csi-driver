all: build

REGISTRY ?=
VERSION ?= $(shell git describe --always --dirty)
GOPROXY ?= https://proxy.golang.org
ifneq (,$(REGISTRY))
IMAGE_BASE := $(REGISTRY)/cloud-provider-vsphere/csi/ci
else
IMAGE_BASE := cloud-provider-vsphere/csi/ci
endif
DRIVER_IMAGE := $(IMAGE_BASE)/driver
SYNCER_IMAGE := $(IMAGE_BASE)/syncer
DRIVER_DOCKERFILE := driver/Dockerfile
SYNCER_DOCKERFILE := syncer/Dockerfile

build-image:
	docker build \
		-t $(IMAGE):$(VERSION) \
		-f $(DOCKERFILE) \
		../../../..
	docker tag $(IMAGE):$(VERSION) $(IMAGE):latest

.PHONY: build
build:
	$(MAKE) build-image IMAGE=$(DRIVER_IMAGE) DOCKERFILE=$(DRIVER_DOCKERFILE)
	$(MAKE) build-image IMAGE=$(SYNCER_IMAGE) DOCKERFILE=$(SYNCER_DOCKERFILE)

.PHONY: clean
DOCKER_RMI_FLAGS := --no-prune
clean:
	docker rmi $(DOCKER_RMI_FLAGS) $(IMAGE):$(VERSION) $(IMAGE):latest 2>/dev/null || true

.PHONY: clobber
clobber: DOCKER_RMI_FLAGS :=
clobber: clean
	docker rmi $$(docker images -qf reference=$(IMAGE):*) 2>/dev/null || true

print-image:
	@echo $(IMAGE):$(VERSION)

.PHONY: print
print:
	@$(MAKE) print-image IMAGE=$(DRIVER_IMAGE)
	@$(MAKE) print-image IMAGE=$(SYNCER_IMAGE)

